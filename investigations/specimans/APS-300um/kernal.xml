<kernal>
	<experimentalSetup>
		<Laser>
			<!--power - Watts-->
			<!--radius - m-->
			<power>30</power>
			<radius>20e-4</radius>
			<offset>0.95</offset>
			<amplitude>.05</amplitude>
		</Laser>

		<Detector>
			<!--radius  ** detector viewing radius-->
			<!--lambda  ** detector wavelength-->
			<radius>0.25e-3</radius>
			<lambda>5e-6</lambda>
		</Detector>		
	</experimentalSetup>
	
	<TBCsystem>
		<coating>
		  <conductivity>
				<offset>1.44</offset>
				<slope>0</slope>
			</conductivity>

			<thermalmass>
				<offset>2.1e6</offset>
				<slope>0</slope>
			</thermalmass>

			<lambda>0.14725</lambda>
			<length>300e-6</length>
		</coating>

		<substrate>
			<conductivity>
				<offset>12.7</offset>
				<slope>0</slope>
			</conductivity>

			<thermalmass>
				<offset>3.44e6</offset>
				<slope>0</slope>
			</thermalmass>

			<lambda>0</lambda>
			<length>7098e-6</length>
		</substrate>
		
		<TemperatureScale>
			<!--Temperature scales must be in Kelvin-->
			<tolerance>1e-3</tolerance>
			<referance>300</referance>
			<base>273.15</base>
			<rear>0</rear>
		</TemperatureScale>			
		
		<RadiationProperties>
			<!--- Reflection; R0 at surface; R1 at interface-->
			<R0>0.2</R0>
			<R1>0.8</R1>
			<Emit1>42</Emit1>
		</RadiationProperties>	
		
		<radialDomain>0.25e-3</radialDomain>
	</TBCsystem>
	
	<thermalModel>
		<heatModel>OneDimAnalytical</heatModel>
		<emissionModel>OneDimNonLin</emissionModel>
		
		<simulation>analytical</simulation>
		<temperatureDep> false </temperatureDep>
		
		<mesh>
			<M2>101</M2>
			<Rend>20</Rend>
			<Nend>40</Nend>
			<beta1>100</beta1>
			<split>0.5</split>
			<num_iter>1000</num_iter>
		</mesh>
	</thermalModel>
	

	
</kernal>
